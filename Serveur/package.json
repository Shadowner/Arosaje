  "license": "ISC",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/validator": "^13.7.15",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.6.1",
    "swagger-ui-express": "^4.6.2",
    "tsoa": "^5.1.1",
    "typeorm": "^0.3.11",
    "typescript-ioc": "^3.2.2",
    "validator": "^13.9.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
