{
  "name": "arosaje-backend",
  "version": "1.0.0",
  "description": "Le backend de l'application Arosaje ",
  "main": "dist/main.js",
  "scripts": {
    "build": "npx tsc",
    "build:start": "npx tsoa spec-and-routes && npm run build && npm run start",
    "start": "node dist/main.js",
    "dev": "concurrently \"nodemon --ignore src/routers/ -x yarn build:start\"",
